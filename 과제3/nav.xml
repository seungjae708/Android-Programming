    </fragment>
    <fragment
        android:id="@+id/page1Fragment"
        android:name="com.example.week9.Page1"
        android:label="Page1" />
    <fragment
        android:id="@+id/page2Fragment"
        android:name="com.example.week9.Page2"
        android:label="Page2" />
    <dialog
        android:id="@+id/myDialogFragment"
        android:name="com.example.week9.MyDialogFragment"
        android:label="MyDialogFragments" />
